# My core shell configuration (suitable for local or remote machines).
# Written by Tiger Sachse.

# If not running interactively, do nothing.
case $- in
    *i*)
        ;;
    *)
        return
        ;;
esac

# Source a work configuration, if available.
if [ -f "$HOME/.amazon_shellrc" ]; then
    . "$HOME/.amazon_shellrc"
fi

# Set the default editor to be Vi.
export VISUAL="vi"
export EDITOR="$VISUAL"

# Include the .aliases file, if it exists.
if [ -f "$HOME/.aliases" ]; then
    source "$HOME/.aliases"
fi
