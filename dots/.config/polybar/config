[colors]
background = ${xrdb:color0:}
light-background = ${xrdb:color8:}
font = ${xrdb:color7:}
underline = ${xrdb:color3:}

[global]
font-0 = "sharetechmono:size=12;2"
width = 99%
offset-y = 1%
offset-x = .5%
monitor = ${env:POLYBAR_MONITOR:}
background = ${colors.background}

[bar/solobar]
inherit = global
modules-left = bspwm
modules-center = date
modules-right = 
tray-position = right

[module/date]
type = internal/date
interval = 1
date = "%I:%M %p"
date-alt = "%A, %B %d, %Y"

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = true
label-focused-background = ${colors.light-background}
label-separator = |
label-state = "      %name%    "
format = "     <label-state>     "
